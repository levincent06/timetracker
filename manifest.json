{
  "manifest_version": 2,
  "name": "Time Tracker",
  "version": "0.1",
  "description": "Hides suggested videos on YouTube as well as tracks time spent on unproductive websites.",
  "options_page": "options.html",
  // "icons": { },
  "permissions":[
    "webNavigation",
    "tabs",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Time Tracker",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["hide.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
